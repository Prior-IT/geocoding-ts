{
    "compilerOptions": {
        "module": "commonjs",
        "composite": true,
        "declaration": true,
        "noLib": false,
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "lib",
        "rootDir": "src"
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "tests/**"
    ]
}
